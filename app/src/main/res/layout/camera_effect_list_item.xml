<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_item"
    android:layout_width="70.0dip"
    android:layout_height="100.0dip"
    android:paddingBottom="9.0dip"
    android:paddingLeft="4.0dip"
    android:paddingRight="4.0dip"
    android:paddingTop="9.0dip" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="62.0dip"
        android:layout_height="20.0dip"
        android:layout_alignParentTop="true"
        android:background="@color/material_free_down"
        android:gravity="center"
        android:textColor="@color/white_gray"
        android:textSize="11.0dip" />

    <ImageView
        android:id="@+id/iv_filter"
        android:layout_width="62.0dip"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_name"
        android:scaleType="fitXY"
        android:src="@drawable/filter_original" />

    <ImageView
        android:id="@+id/iv_new_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/tv_name"
        android:src="@drawable/iv_filter_new"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="62.0dip"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_name"
        android:scaleType="fitXY"
        android:background="#99000000" 
        android:visibility="gone"/>

</RelativeLayout>